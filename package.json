{
	"name": "direnv",
	"displayName": "direnv",
	"description": "unclutter your .profile",
	"version": "0.2.0",
	"preview": true,
	"icon": "assets/icon.png",
	"author": "Martin KÃ¼hl <martin.kuehl@gmail.com>",
	"publisher": "mkhl",
	"license": "0BSD",
	"repository": {
		"type": "git",
		"url": "https://github.com/direnv/direnv-vscode"
	},
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": false,
			"description": "direnv can run arbitrary shell code"
		}
	},
	"contributes": {
		"commands": [
			{
				"command": "direnv.allow",
				"title": "direnv: Allow this .envrc file"
			},
			{
				"command": "direnv.block",
				"title": "direnv: Block this .envrc file"
			},
			{
				"command": "direnv.create",
				"title": "direnv: Create .envrc file"
			},
			{
				"command": "direnv.open",
				"title": "direnv: Open .envrc file"
			},
			{
				"command": "direnv.reload",
				"title": "direnv: Reload environment"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "direnv.allow",
					"when": "editorLangId == shellscript"
				},
				{
					"command": "direnv.block",
					"when": "editorLangId == shellscript"
				}
			]
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"clean": "rm -r ./out",
		"precompile": "npm run clean",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "tsfmt --verify && eslint ./src --ext ts",
		"fix": "tsfmt --replace && eslint ./src --ext ts --fix",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/sinon": "^10.0.6",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"sinon": "^12.0.1",
		"typescript": "^4.4.4",
		"typescript-formatter": "^7.2.2"
	}
}
