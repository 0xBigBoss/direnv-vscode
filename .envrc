
if has nix; then

      if has lorri && has use_lorri; then
        # use lorri if we're lucky
        eval "$(lorri direnv)"

    elif nix flake metadata >/dev/null 2>&1 && has use_flake; then
        # use flakes if possible
        use flake

    else
        # Otherwise fall back to pure nix
        use nix
    fi

fi

layout node
