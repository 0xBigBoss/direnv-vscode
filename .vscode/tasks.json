// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: build",
			"type": "npm",
			"script": "build",
			"problemMatcher": "$esbuild",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "npm: watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$esbuild-watch",
			"group": "build",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
		},
		{
			"label": "npm: test-compile",
			"type": "npm",
			"script": "test-compile",
			"group": "build",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "silent"
			},
		},
		{
			"label": "npm: lint",
			"type": "npm",
			"script": "lint",
			"problemMatcher": "$eslint-stylish",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "npm: fix",
			"type": "npm",
			"script": "fix",
			"problemMatcher": "$eslint-stylish",
		},
		{
			"label": "npm: package",
			"type": "npm",
			"script": "package",
			"problemMatcher": [],
		}
	]
}
